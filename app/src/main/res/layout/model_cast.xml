    <androidx.cardview.widget.CardView
        android:id="@+id/movieCastCard"
        android:background="@drawable/cast_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_cast"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/ic_man" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_cast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:elevation="8dp"
        android:ellipsize="end"
        android:background="@color/colorBlackDark"
        android:gravity="center"
        android:maxLines="1"
        android:textStyle="bold"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@+id/movieCastCard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/movieCastCard"
        app:layout_constraintTop_toTopOf="@+id/movieCastCard" />
</androidx.constraintlayout.widget.ConstraintLayout>